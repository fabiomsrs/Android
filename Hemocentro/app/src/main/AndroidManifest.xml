<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fabiano.hemocentro">

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <activity android:name=".HemocentroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FormDoador"
            android:label="Formulario"
            android:parentActivityName=".HemocentroActivity" />
        <activity
            android:name=".BancoDeSangue"
            android:label="Banco de Sangue"
            android:parentActivityName=".HemocentroActivity" />
        <activity android:name=".Rank"
            android:label="Rank de Doadores"
            android:parentActivityName=".HemocentroActivity"></activity>
    </application>

</manifest>